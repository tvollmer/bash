#!/bin/bash

#args=($@)

find . -maxdepth 1 -type d | while read d; do
  pushd $d > /dev/null; 

  if [ -d ".git" ]; then

      pwd;

      # if it's not already there, add the gitignore file
      if [ ! -f ".gitignore" ]; then
          ln -s ~/.gitignore;
      fi;

      eval "$@";
      echo "";

  fi;

  popd > /dev/null; 
done;
